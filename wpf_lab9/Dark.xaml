<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="#FF2D2D30"/>
    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Menu.Foreground" Value="White"/>        
        <Setter Property="Button.BorderBrush" Value="White"/>        
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="ToolBar.Foreground" Value="White"/>
        <Setter Property="ToolBar.Background" Value="#FF2D2D30"/>
    </Style>    
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="RadioButtonStyle" BasedOn="{StaticResource WindowStyle}">        
        <Setter Property="RadioButton.Foreground" Value="white"/>
        <Setter Property="RadioButton.BorderBrush" Value="White"/>
        <Setter Property="RadioButton.Background" Value="White"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBlock.Foreground" Value="White"/>        
    </Style>
</ResourceDictionary>